{
  "kind": "collectionType",
  "collectionName": "patterns",
  "info": {
    "name": "pattern"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "keywords": {
      "type": "string"
    },
    "slug": {
      "type": "string",
      "unique": false,
      "required": false
    },
    "solution": {
      "type": "component",
      "repeatable": false,
      "component": "pattern.solution"
    },
    "pros_and_cons": {
      "type": "component",
      "repeatable": false,
      "component": "pattern.pros-and-cons"
    },
    "variants": {
      "collection": "pattern-variant"
    },
    "category": {
      "model": "pattern-category",
      "via": "patterns"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "filters": {
      "collection": "pattern-filter"
    }
  }
}
